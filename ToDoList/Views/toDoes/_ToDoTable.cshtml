@model IEnumerable<ToDoList.Models.toDo>

<div id="progressBarToDo">
    <div class="progress">
        <div class="progress-bar" role="progressbar"
             style="width:@(Html.AttributeEncode(ViewBag.Percent))%"></div>
    </div>
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Desc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Done)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @if (item.Done)
                {
                    <div class="CompletedToDo">@Html.DisplayFor(modelItem => item.Desc)</div>
                }
                else
                {
                    @Html.DisplayFor(modelItem => item.Desc)
                }
            </td>
            <td>
                @Html.CheckBoxFor(modelItem => item.Done, new { id = item.Id, @class = "ActiveCheck" })
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>

<script src="~/CustomScripts/AddCheckBoxListener.js"></script>
